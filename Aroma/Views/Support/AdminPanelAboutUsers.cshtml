@{
    ViewBag.Title = "AdminPanelForUsers";
    Layout = "~/Views/Shared/_LayoutContact.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Users</title>
    <style>
        /* Пример стилей для страницы */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        h1 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th, table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            table th {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>Admin Panel - Users</h1>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Отображаем данные пользователей из модели -->
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Level</td>
                        <td>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.change-role-btn').click(function () {
            var userId = $(this).data('user-id');
            var newRole = prompt('Введите новую роль:');
            if (newRole !== null) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ChangeUserRoleAsync", "Admin")',
                    data: { userId: userId, newRole: newRole },
                    success: function (response) {
                        if (response.success) {
                            alert('Роль успешно изменена.');
                            // Здесь можно обновить данные на странице, если это необходимо
                        } else {
                            alert('Произошла ошибка при изменении роли.');
                        }
                    }
                });
            }
        });
    });
</script>
