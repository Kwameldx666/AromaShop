@model List<Lab_TW.Models.Product>

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutAddProduct.cshtml";
}

<title>Add Product</title>
<style>
    .form-inline > * {
        margin: 10px;
        vertical-align: top;
    }
</style>
   

<body>
    <h1>Форма добавления товара</h1>

    @using (Html.BeginForm("AddProducts", "Product", FormMethod.Post, new { enctype = "multipart/form-data", id = "product-form" }))
    {
<form action="/путь_к_вашему_обработчику" method="post" enctype="multipart/form-data" style="display:flex; flex-wrap:wrap; justify-content:space-between; align-items:flex-start;">
    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="product-name">Название товара:</label>
        <input type="text" id="product-name" name="Name" required>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="image-file">Загрузить картинку:</label>
        <input type="file" id="image-file" name="ImageFile" required>

    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="Category">Category:</label>
        <select id="Category" name="Category" required>
            <option value="">Выберите тип...</option>
            <option value="Ноутбуки">Ноутбуки</option>
            <option value="Смартфоны">Смартфоны</option>
            <option value="Планшеты">Планшеты</option>
            <option value="Фотокамеры">Фотокамеры</option>
            <option value="Телевизоры">Телевизоры</option>
            <option value="Наушники">Наушники</option>
        </select>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="product-type">Brand:</label>
        <select id="product-type" name="ProductType" required>
            <option value="">Выберите бренд...</option>
            <option value="Apple">Apple</option>
            <option value="Asus">Asus</option>
            <option value="Gionee">Gionee</option>
            <option value="Micromax">Micromax</option>
            <option value="Samsung">Samsung</option>
        </select>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="description">Описание:</label>
        <input type="text" id="description" name="Description" required>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="price">Цена:</label>
        <input type="number" id="price" name="Price" required min="0" step="0.01">
    </div>


    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="quantity">Количество:</label>
        <input type="number" id="quantity" name="Quantity" required min="0" step="1">
    </div>
    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="ADDPRODUCT">Добавьте товар</label>
        <input type="submit" value="Добавить товар">
    </div>
</form>

    }

</body>
