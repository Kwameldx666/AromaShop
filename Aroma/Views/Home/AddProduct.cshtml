@model List<Lab_TW.Models.Product>

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutAddProduct.cshtml";
}

<title>Add Product</title>
<style>
    .form-inline > * {
        margin: 10px;
        vertical-align: top;
    }
</style>
   

<body>
    <h1>Форма добавления товара</h1>

    @using (Html.BeginForm("AddProducts", "Product", FormMethod.Post, new { enctype = "multipart/form-data", id = "product-form" }))
    {
<form action="/путь_к_вашему_обработчику" method="post" enctype="multipart/form-data" style="display:flex; flex-wrap:wrap; justify-content:space-between; align-items:flex-start;">
    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="product-name">Название товара:</label>
        <input type="text" id="product-name" name="Name" required>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="image-file">Загрузить картинку:</label>
        <input type="file" id="image-file" name="ImageUrl" required>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="product-type">Тип продукта:</label>
        <select id="product-type" name="productType" required>
            <option value="">Выберите тип...</option>
            <option value="телефон">Телефон</option>
            <option value="ноутбук">Ноутбук</option>
            <option value="планшет">Планшет</option>
            <option value="наушники">Наушники</option>
            <option value="умные часы">Умные часы</option>
            <option value="камера">Камера</option>
        </select>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="description">Описание:</label>
        <input type="text" id="description" name="Description" required>
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="price">Цена:</label>
        <input type="number" id="price" name="Price" required min="0" step="0.01">
    </div>

    <div style="display:inline-flex; flex-direction:column; margin-right:20px;">
        <label for="ADDPRODUCT">Добавьте товар</label>
        <input type="submit" value="Добавить товар">
    </div>
</form>

    }

</body>
